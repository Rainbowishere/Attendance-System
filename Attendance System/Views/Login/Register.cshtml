@model Attendance_System.Models.Person
<form>
    <div class="form-group">
        <label class="control-label" style="font-weight:bold">ຊື່ ແລະ ນາມສະກຸນ:</label>
        <input type="text" class="form-control" />
    </div>
</form>
<div class="row">
    <div class="col-xs-5">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold">ເບີໂທ:</label>
        </div>
    </div>
    <div class="col-xs-7">
        <div class="form-group">
            <input type="tel" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-5">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold">ລະຫັດພະນັກງານ:</label>
        </div>
    </div>
    <div class="col-xs-7">
        <div class="form-group">
            <input type="text" class="form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-5">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold">ຈຸດປະສົງ:</label>
        </div>
    </div>
    <div class="col-xs-7">
        <select class="form-control" style="height:30px ; padding-top:3px">
            <option value="">ຝຶກງານ</option>
            <option value="">ສົ່ງເອກະສານ</option>
            <option value="">ປະຊຸມ</option>
            <option value="">ມາເອົາຄອມທີ່ແປງ</option>
            <option value="">ພົວພັນວຽກ</option>
            <option value="">ເອົາຄອມມາແປງ</option>
        </select>
    </div>
</div>
<div class="row">
    <div class="col-xs-5">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold">ອຸປະກອນທີ່ນຳເຂົ້າມາ:</label>
        </div>
    </div>
    <div class="col-xs-7">
        <select class="form-control" style="height:30px ; padding-top:3px">
            <option value="">Laptop</option>
            <option value="">ເອກະສານ</option>
            <option value="">PC</option>
        </select>
    </div>
</div>

<div class="row">
    <div class="col-xs-5">
        <div class="form-group">
            <label class="control-label" style="font-weight:bold">ມາຈາກ:</label>
        </div>
    </div>
    <div class="col-xs-7">
        <div class="form-group">
            <label class="control-label">@Model.Source</label>
        </div>
    </div>
</div>